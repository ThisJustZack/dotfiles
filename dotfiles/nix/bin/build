#!/bin/sh

cd $HOME/.config/nix

build() {
        if [ -f /etc/NIXOS ]; then
                ./bin/build-profiles/nixos-build
        elif [ "$(uname)" == "Darwin" ]; then
                ./bin/build-profiles/darwin-build
        elif [ "$(uname)" == "Linux" ]; then
                ./bin/build-profiles/linux-build
        fi
}

build
