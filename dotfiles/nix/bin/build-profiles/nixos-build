#!/bin/sh

GREEN='\033[1;32m'
RED='\033[1;31m'
CLEAR='\033[0m'

profile() {
        PROFILE="$(whoami)"

        echo "${GREEN}Building profile for $PROFILE...${CLEAR}"
        sudo nixos-rebuild switch --flake .#$PROFILE --impure &&
                echo "${GREEN}Finished building profile!${CLEAR}" ||
                echo "${RED}Build Error${CLEAR}"
}

profile
