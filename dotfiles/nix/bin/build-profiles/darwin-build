#!/bin/sh

GREEN='\033[1;32m'
RED='\033[1;31m'
CLEAR='\033[0m'

profile() {
        echo "${GREEN}Building profile for macbook...${CLEAR}"
        sudo nix run nix-darwin -- switch --flake . &&
                echo "${GREEN}Finished building profile for macbook!${CLEAR}" ||
                echo "${RED}Build Error${CLEAR}"
}

profile
